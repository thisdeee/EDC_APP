class PaymentPage extends StatefulWidget {
  const PaymentPage({super.key});

  @override
  State<PaymentPage> createState() => _PaymentPageState();
}

class _PaymentPageState extends State<PaymentPage> {
  String _paymentMethod = 'Cash';
  bool _processing = false;
  String? _redirectURL;

  // TODO: Replace with your actual PhaJay API Secret Key
  static const String PAYMENT_API_KEY = '$2b$10$sRx/uTHMydWDIdizURcgxecjFPbvnUNFzOwTl3lxNyV35zoFY4HnO';

  Future<void> _confirmPayment() async {
    setState(() => _processing = true);

    try {
      // Generate unique order number (recommended by PhaJay)
      final orderNo = 'ORDER${DateTime.now().millisecondsSinceEpoch}';
      
      // Build cart items description
      final itemsList = CartState.cart.values
          .map((item) => '${item.product.name} x${item.qty}')
          .join(', ');
      
      final description = 'Purchase: $itemsList';
      
      print('Creating payment for order: $orderNo');
      
      // Call PhaJay Payment Gateway API
      final paymentResponse = await ApiService.createPaymentLink(
        amount: CartState.total,
        orderNo: orderNo,
        description: description,
        apiKey: PAYMENT_API_KEY,
        tag1: '4B-SHOP', // Shop identifier
        tag2: 'POS-APP', // Source identifier
        tag3: DateTime.now().toIso8601String(), // Timestamp
      );

      print('Payment Response: $paymentResponse');
      
      // Extract redirectURL from response (PhaJay returns 'redirectURL')
      final redirectURL = paymentResponse['redirectURL'];
      final returnedOrderNo = paymentResponse['orderNo'];

      if (redirectURL != null && redirectURL.isNotEmpty) {
        setState(() {
          _redirectURL = redirectURL;
          _processing = false;
        });

        // Save pending order locally
        final prefs = await SharedPreferences.getInstance();
        final list = prefs.getStringList('pending_orders') ?? [];
        list.add('$returnedOrderNo|${DateTime.now().toIso8601String()}|${CartState.total}');
        await prefs.setStringList('pending_orders', list);

        // Show payment link dialog with option to open
        _showPaymentLinkDialog(redirectURL, returnedOrderNo ?? orderNo);
      } else {
        throw Exception('redirectURL not received from payment gateway');
      }
    } catch (e) {
      setState(() => _processing = false);
      
      if (mounted) {
        ScaffoldMessenger.of(context).showSnackBar(
          SnackBar(
            content: Text('Payment error: ${e.toString()}'),
            backgroundColor: Colors.red,
            duration: const Duration(seconds: 5),
          ),
        );
      }
    }
  }

